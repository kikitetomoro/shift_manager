<h2 class="ttl">新規登録（管理者用）</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admin_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name, "名前"%>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em class="min-words">(最低<%= @minimum_password_length %> 文字)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用) "  %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class="change-auth-form">
  <p>すでにアカウントをお持ちですか<%= render "admin_users/shared/links" %></p>
</div>


