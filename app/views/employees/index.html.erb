<div class="container">
  <ul class="admin-nav-bar">
        <% if admin_user_signed_in? %>
          <li><%= link_to "従業員一覧", employees_path %></li>
          <li><%= link_to 'シフト設定一覧', shift_settings_path %></li>
          <li><%= link_to 'シフト一覧', root_path %></li>
          <li class="logout-btn"><%= link_to "ログアウト", destroy_admin_user_session_path, data: { turbo_method: :delete } %></li>
        <% else %>
          <li><%= link_to "新規登録", new_admin_user_registration_path %></li>
          <li><%= link_to "ログイン", new_admin_user_session_path %></li>
        <% end %>
    </ul>

  <h1 class="ttl">従業員一覧</h1>

  <%= link_to '従業員の追加', new_employee_path ,class: "create-btn" %>
  <div class="main-space">
  <table class="employee-table">
    <thead>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>従業員ID</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.employee_id %></td>
          <td>
            <%= link_to '編集', edit_employee_path(employee), class: "btn btn-edit" %>
            <%= link_to '削除', employee_path(employee), data: { turbo_method: :delete }, class: "btn btn-delete" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>